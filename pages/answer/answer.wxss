

.tab{
  border-bottom: 1px solid #e7e7e7;
  text-align: center;
  font-size: 28rpx;
  color: #888;
}
.tab .tabItem{
  display: inline-block;
  height: 114rpx;
  line-height: 114rpx;
  margin: 0 111rpx;
  
}
.tab .tabItem.cur{
  color: #333;
  font-weight: bold;
  border-bottom: 3rpx solid rgba(51,51,51,1);
}

.question{
  padding: 52rpx 30rpx 0;
  font-size: 30rpx;
  color: #333;
}
.question .til{
  margin-bottom: 60rpx;
}

.question .ans{
  position: relative;
  padding-top: 10rpx;
  padding-left: 65rpx;
  margin-bottom: 63rpx;
}
.question .ans.right{
  color: #0ACEF9;
}
.question .ans.wrong{
  color: #F56F6B;
}

.question .ans .label{
  position: absolute;
  top: 0;
  left: 0rpx;
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
  border-radius: 25rpx;
  border: 1px solid #bfbfbf;
  text-align: center;
  line-height: 50rpx;
}
.question .ans .con{
  width: 200rpx;
}

.bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 94rpx;
  padding: 0 40rpx;
  border-top:1rpx solid rgba(170,170,170,1); 
  line-height: 94rpx;
}
.bottom image{
  width: 30rpx;
  height: 30rpx;
}
.bottom text{
  font-size: 28rpx;
}
.rightNum{
  margin:0 70rpx 0 19rpx; 
  color: #0ACEF9;
}
.wrongNum{
  margin:0 330rpx 0 19rpx; 
  color: #F56F6B;
}
.percent{
  color: #555;
  font-size: 28rpx;
  margin-right: 32rpx;
}
.bottom .up{
 width: 20rpx;
 height: 12rpx;
}