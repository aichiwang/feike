.schoolList .down{
  width: 20rpx;
  height: 12rpx; 
}
.schoolList  .cityPicker{
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.schoolList .list{
  padding-top: 10rpx;
}
.schoolList .list .item{
  padding: 41rpx 0;
  overflow: hidden;
  border-bottom: 1px solid #E7E7E7;
}
.schoolList .list .item .bigPic{
  float: left;
  width: 260rpx;
  height: 160rpx;
  background: #DCDCDC;
  margin:0 26rpx;
}
.schoolList .list .item .con{
  float: left;
  width: 414rpx;
  padding-top: 10rpx;
}
.schoolList .list .item .con .til{
  font-size: 32rpx;
  color: #333;
}
.schoolList .list .item .con .addr{
  font-size: 26rpx;
  color: #888;
}
.schoolList .list .item .con .length{
  text-align: right;
  font-size: 26rpx;
  color: #888;
}
.schoolList .list .item .con .length image{
  width: 20rpx;
  height: 25rpx;
  margin-right: 7rpx;
}
.bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  border-top: 1px solid #BCBCBC;
  padding-top: 15rpx;
}
.bottom .item{
  float: left;
  margin: 0 100rpx;
  text-align: center;
  font-size: 20rpx;
}
.bottom .item .botIcon{
  width: 40rpx;
  height: 40rpx;
}