.center .con{
  padding: 70rpx 31rpx 0;
}
.center .con .uInfo .uPic{
  width: 180rpx;
  height: 180rpx;
  background: #eee;
  border-radius: 50%;
  vertical-align: middle;
}
.center .con .uInfo .unick{
  font-size: 40rpx;
  color: #333;
  margin-left: 29rpx;
}

.center .con .myScore{
  width:700rpx;
  height:110rpx;
  background:rgba(29,29,29,1);
  border-radius:20rpx;
  line-height: 110rpx;
}

.center .con .myScore .des{
  margin: 0 29rpx;
  color: #fff;
}
.center .con .myScore .score{
  color: #FFDA92;
  font-size: 36rpx;
  vertical-align: middle;
}
.center .con .myScore .toGetScore{
  float: right;
  width:180rpx;
  height:60rpx;
  margin-top: 25rpx;
  margin-right: 23rpx;
  line-height: 60rpx;
  background:rgba(255,218,146,1);
  border-radius:30rpx;
  font-size: 26rpx;
  padding: 0rpx;
}

.center .con .navItem{
  height: 81rpx;
  line-height: 81rpx;
  border-bottom: 1px solid #E7E7E7; 
}
.center .con .navItem .navIcon{
  width: 41rpx;
  height: 41rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.center .con .navItem .rightIcon{
  float: right;
  width: 12rpx;
  height: 20rpx;
  margin-top: 30rpx; 
}







.bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-top: 16rpx;
  border-top: 1px solid #aaa;
}
.bottom .item{
  float: left;
  margin: 0 100rpx;
  text-align: center;
  font-size: 20rpx;
}
.bottom .item .botIcon{
  width: 40rpx;
  height: 40rpx;
}