
.school{
  background:rgba(248,248,248,1);
}
.school .top .lunbo{
  width: 750rpx;
  height: 480rpx;
  background: #fff;
}

.school .top .schoolInfo{
  position: relative;
  padding: 53rpx 35rpx 44rpx;
  background: #fff;
}
.school .top .schoolInfo .til{
  width:440rpx;
  height:39rpx;
  overflow: hidden;
  font-size:40rpx;
  font-family:PingFang SC;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:34rpx;
}

.school .top .schoolInfo .add{
  width:441rpx;
  margin: 30rpx 0;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(85,85,85,1);
  line-height:34rpx;
  overflow: hidden;
}

.school .top .schoolInfo .location image{
  width:20rpx;
  height:25rpx;
}

.school .top .schoolInfo .location text{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(136,136,136,1);
  line-height:34rpx;
  opacity:0.5;
}

.school .top .schoolInfo button{
  position: absolute;
  right: 0;
  top: 100rpx;
  right: 31rpx;
  width:180rpx;
  height:70rpx;
  background:rgba(12,205,248,1);
  border-radius:35rpx;
  padding: 0;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:70rpx;
  min-height: 50rpx;
}

.school .kecheng{
  margin-top: 20rpx;
}
.school .kecheng .kechengTab{
  height: 110rpx;
  background: #fff;
  text-align: center;
  border-bottom: 1px solid #E7E7E7;
}
.school .kecheng .kechengTab text{
  display: inline-block;
  margin: 0 105rpx;
  text-align: center;
  line-height: 110rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:600;
  color:rgba(136,136,136,1);
}
.school .kecheng .kechengTab text.cur{
  color: #333;
  font-weight: bold;
  border-bottom: 3rpx solid #333;

}
.school .kecheng .kechengDetal{
  overflow: hidden;
  background: #fff;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:34rpx;
  padding:30rpx 0; 
}
.school .kecheng .kechengDetal>view{
  float: left;
  width: 305rpx;
  line-height: 75rpx;
  padding-left: 41rpx;
}
.school .kecheng .kechengDetal>view .icon{
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background:rgba(27,27,27,1);
  border-radius:50%;
  padding: 0;
  vertical-align: middle;
  margin-right: 20rpx;
}

.baoming{
  margin-top: 20rpx;
  padding-top: 47rpx;
  background: #fff;
}
.baoming .til{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:34rpx;
  text-align: center;
  margin-bottom: 45rpx;
}
.baoming .uname,.baoming .uphone,.baoming .code{
  width:650rpx;
  height:90rpx;
  padding-left: 29rpx;
  background:rgba(237,237,237,1);
  border-radius:20rpx;
  margin: 0 0 20rpx 37rpx;
  font-size: 28rpx;
}

.baoming .code{
  display: inline-block;
  width: 470rpx;
  vertical-align: middle;
}

.baoming .getCode{
  display: inline-block;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(12,205,248,1);
  line-height:34rpx;
  padding: 0;
  margin-left: 40rpx;
}
.baoming .toBaoming{
  width:400rpx;
  height:90rpx;
  background:rgba(12,205,248,1);
  border-radius:45rpx;
  margin-top: 59rpx;
  padding: 0;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:90rpx;
  margin-bottom: 287rpx;
}